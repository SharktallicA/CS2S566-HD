<Window x:Class="JewelThief.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JewelThief"
        mc:Ignorable="d"
        Title="About" Height="202" Width="320" WindowStyle="ToolWindow" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Background="#FAFAFA" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Button x:Name="btnExit" Content="Exit" Margin="0,0,10,10" Click="btnExit_Click" HorizontalAlignment="Right" Width="75" Height="22" VerticalAlignment="Bottom" />
        <StackPanel HorizontalAlignment="Left" Height="170" Margin="10,10,0,0" VerticalAlignment="Top" Width="294">
            <Label x:Name="lblAppTitle" Content="Application" FontWeight="Bold" FontSize="16" />
            <Label x:Name="lblApp" Content="Haunted Dungeon Level Editor" FontSize="12" />
            <Label x:Name="lblStudentTitle" Content="Student" FontWeight="Bold" FontSize="16" />
            <Label x:Name="lblStudent" Content="Khalid Ali (15005070)" FontSize="12" />
        </StackPanel>
    </Grid>
</Window>